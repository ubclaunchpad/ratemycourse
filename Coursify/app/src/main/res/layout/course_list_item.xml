<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:backgroundTint="@color/colorWhite"
    android:background="@drawable/course_background_border"
    android:layout_width="160dp" android:layout_height="160dp">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="Test Course: Introduction to a test course"
        android:textColor="@color/colorTeal"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtCourseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="TEST 101"
        android:textColor="@color/colorTeal"
        android:textSize="12dp" />

</RelativeLayout>